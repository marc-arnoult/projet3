    <div class="article-container">
        {% for article in articles %}
            <article class="article">
                <div class="round">
                    <time>
                        {{ article.created_at|date('d M Y') }}
                    </time>
                </div>
                <div class="info">
            <span>
                 <i class="fa fa-comment-o" aria-hidden="true"></i>
                {{ commentDAO.getCountComment(article.id).nbComments }}
                commentaires
            </span>
                </div>
                <hr>
                <h2><a href="/article/{{ article.id }}">{{ article.title }}</a></h2>
                <div class="content">
                    {{ article.content | striptags('<br><p>') | truncate(300, true, ' ...') | raw }}
                </div>
            </article>
        {% endfor %}
    </div>