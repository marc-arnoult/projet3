<div class="comments" style="margin-left: 30px">
    <div class="reply" commentId="{{ comment.id }}">
        <h4>{{ comment.pseudo }}</h4>
        <i>posté le : {{ comment.created_at|date('d/m/Y à h:m') }}</i>
        <a href="">Répondre</a>
        <p>{{ comment.content }}</p>
    </div>
    {% if comment.children %}
        {% for comment in comment.children %}
            {% include 'comments.twig' %}
        {% endfor %}
    {% endif %}
</div>