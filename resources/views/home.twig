{% extends 'layout.twig' %}

{% set articles = request.attributes.get('articles') %}
{% set commentDAO = request.attributes.get('commentDAO') %}
{% set messages = request.attributes.get('messages') %}

{% block title %}
   {{ 'Jean Forteroche' }}
{% endblock %}

{% block content %}
    <section id="home-page">
        {% for key, message in messages %}
            <div class="alert alert-{{ key }}">
                <span class="alert-text">{{ message[0] }}</span>
                <span class="alert-remove">x</span>
            </div>
        {% endfor %}

        <h1>Bonjour, bienvenue sur mon blog</h1>
        <div class="bg-tiret">
            <div class="tiret"></div>
            <div class="tiret"></div>
        </div>

        {% embed 'articles.twig' %}{% endembed %}

    </section>
    <section id="home-page-lastComment">
        <h2>Derniers commentaires publiés</h2>
        <div class="comment-container">
            <div class="comments">
                <div class="reply">
                    <h4>Par {{ comment.pseudo }}</h4>
                    <i>posté le : {{ comment.created_at|date('d/m/Y à H:i', 'Europe/Paris') }}</i>
                    <p>Bonjour</p>
                </div>
            </div>
