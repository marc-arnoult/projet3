                <div class="reply">
                    <h4>Par {{ comment.pseudo }}</h4>
                    <i>posté le : {{ comment.created_at|date('d/m/Y à H:i', 'Europe/Paris') }}</i>
                    <p>Bonjour</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block script %}
    <script src="/public/js/home.js"></script>
{% endblock %}
