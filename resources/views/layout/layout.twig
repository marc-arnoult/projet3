<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <script src="https://use.fontawesome.com/84658dd2ae.js"></script>
    <link rel="stylesheet" href="/public/css/app.css">
    <title>{% block title %}{% endblock %}</title>
</head>
    <body>
        <header>
            <nav>
                <div>
                    <i class="fa fa-paragraph" aria-hidden="true"></i>
                </div>
                <div id="responsive-menu">
                    <ul>
                        <li><a href="/">Accueil</a></li>
                        <li><a href="/articles">Articles</a></li>
                    </ul>
                    {% set session = request.getSession() %}
                    {% set user = session.get('user') %}
                    {% if not session.get('user') %}
                        <ul>
                            <li><a href="/inscription">Inscription</a></li>
                            <li><a href="/connexion">Connexion</a></li>
                        </ul>
                    {% else %}
                        <ul>
                            <span>Bonjour {{ user.getPseudo() }}</span>
                            <li><a href="/deconnexion">Deconnexion</a></li>
                        </ul>
                    {% endif %}
                </div>
                <a href="">
                    <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
                </a>

            </nav>
        </header>

        {% block content %}{% endblock %}

        <footer>
            {% if user.getRole() == 'administrateur'%}
                <a href="/admin">Administration</a>
            {% endif %}
        </footer>
        <script src="/resources/views/admin/plugins/jQuery/jquery-2.2.3.min.js"></script>
        <script src="/public/js/app.js"></script>
        {% block script %}
        {% endblock %}
    </body>
</html>